{
  "testEnvironment": "node",
  "transform": {},
  "extensionsToTreatAsEsm": [".js"],
  "globals": {
    "NODE_OPTIONS": "--experimental-vm-modules"
  },
  "testMatch": [
    "**/tests/**/*.test.js"
  ],
  "collectCoverageFrom": [
    "**/*.js",
    "!**/node_modules/**",
    "!**/tests/**",
    "!**/logs/**",
    "!server.js"
  ],
  "coverageDirectory": "coverage",
  "coverageReporters": [
    "text",
    "lcov",
    "html"
  ],
  "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"]
}
