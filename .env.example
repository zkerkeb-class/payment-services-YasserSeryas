# Variables d'environnement pour le microservice de paiements

# Port du serveur
PORT=3003

# Service de base de données
DATABASE_SERVICE_URL=http://localhost:3005

# JWT Secret
JWT_SECRET=your_jwt_secret_key_here

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# PayPal Configuration (si nécessaire)
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox

# Autres microservices URLs
RESERVATION_SERVICE_URL=http://localhost:3001
USER_SERVICE_URL=http://localhost:3002
NOTIFICATION_SERVICE_URL=http://localhost:3004

# Frontend URL (pour les redirections)
FRONTEND_URL=http://localhost:3000

# Logs
LOG_LEVEL=info
LOG_FILE=logs/payment-service.log

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Environnement
NODE_ENV=development
